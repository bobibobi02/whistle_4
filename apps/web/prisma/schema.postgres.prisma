// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

//// в”Ђв”Ђв”Ђв”Ђв”Ђв”Ђв”Ђв”Ђв”Ђв”Ђв”Ђв”Ђв”Ђв”Ђв”Ђв”Ђв”Ђв”Ђв”Ђв”Ђв”Ђв”Ђв”Ђв”Ђв”Ђ
//// Models
//// в”Ђв”Ђв”Ђв”Ђв”Ђв”Ђв”Ђв”Ђв”Ђв”Ђв”Ђв”Ђв”Ђв”Ђв”Ђв”Ђв”Ђв”Ђв”Ђв”Ђв”Ђв”Ђв”Ђв”Ђв”Ђ

model User {
  id             String   @id @default(cuid())
  name           String?
  email          String   @unique
  emailVerified  DateTime?
  image          String?
  passwordHash   String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Relations
  posts          Post[]
  comments       Comment[]
  votes          Vote[]
  commentVotes   CommentVote[]
  saved          Saved[]
  subforums      Subforum[]

  // NextAuth
  accounts       Account[]
  sessions       Session[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Post {
  id          String   @id @default(cuid())
  title       String
  content     String?
  mediaUrl    String?
  imageUrls   Json?
  userId      String?
  userEmail   String?
  userName    String?
  subforumId  String?
  subforum    Subforum? @relation(fields: [subforumId], references: [id], onDelete: SetNull)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  user        User?     @relation(fields: [userId], references: [id], onDelete: SetNull)
  comments    Comment[]
  votes       Vote[]
  saved       Saved[]
}

model Comment {
  id         String   @id @default(cuid())
  body       String
  postId     String
  userId     String?
  userEmail  String?
  userName   String?
  parentId   String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Relations
  post       Post      @relation(fields: [postId], references: [id], onDelete: Cascade)
  user       User?     @relation(fields: [userId], references: [id], onDelete: SetNull)
  parent     Comment?  @relation("CommentToComment", fields: [parentId], references: [id], onDelete: Cascade)
  replies    Comment[] @relation("CommentToComment")
  votes      CommentVote[]
}

model Vote {
  id        String   @id @default(cuid())
  userId    String?
  userEmail String?
  postId    String
  value     Int
  createdAt DateTime @default(now())

  // Relations
  post Post @relation(fields: [postId], references: [id], onDelete: Cascade)
  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@unique([userEmail, postId])
  @@index([postId])
}

model CommentVote {
  id        String   @id @default(cuid())
  userId    String?
  userEmail String?
  commentId String
  value     Int
  createdAt DateTime @default(now())

  // Relations
  comment Comment @relation(fields: [commentId], references: [id], onDelete: Cascade)
  user    User?   @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@unique([userEmail, commentId])
  @@index([commentId])
}

model Saved {
  id        String   @id @default(cuid())
  userId    String?
  userEmail String?
  postId    String
  createdAt DateTime @default(now())

  // Relations
  post Post @relation(fields: [postId], references: [id], onDelete: Cascade)
  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@unique([userEmail, postId])
  @@index([postId])
}

model Subforum {
  id          String   @id @default(cuid())
  name        String   @unique
  title       String?
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  creatorId   String?
  creator     User?    @relation(fields: [creatorId], references: [id], onDelete: SetNull)

  posts       Post[]
}

// NEW: used by /api/auth/reset/request for password reset flow
model PasswordResetToken {
  id        String   @id @default(cuid())
  email     String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([email, createdAt])
}
